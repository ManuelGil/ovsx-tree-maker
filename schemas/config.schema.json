{
	"$schema": "http://json-schema.org/draft-07/schema#",
	"type": "object",
	"properties": {
		"treeMaker.files.selectedOutputFormat": {
			"type": "string",
			"default": "markdown",
			"enum": ["markdown", "json", "xml", "yaml", "csv", "txt"],
			"enumDescriptions": ["Markdown", "JSON", "XML"],
			"scope": "resource",
			"description": "The output format for the tree maker files."
		},
		"treeMaker.files.outputPath": {
			"type": "string",
			"default": "tree-maker",
			"scope": "resource",
			"description": "The output path for the tree maker files."
		},
		"treeMaker.files.outputFileName": {
			"type": "string",
			"default": "tree-maker",
			"scope": "resource",
			"description": "The output file name for the tree maker files."
		},
		"treeMaker.files.outputFilePrefix": {
			"type": "string",
			"default": "tree-maker",
			"scope": "resource",
			"description": "The output file prefix for the tree maker files."
		},
		"treeMaker.files.outputFileSuffix": {
			"type": "string",
			"default": "",
			"scope": "resource",
			"description": "The output file suffix for the tree maker files."
		},
		"treeMaker.files.outputFileSeparator": {
			"type": "string",
			"default": "-",
			"scope": "resource",
			"description": "The output file separator for the tree maker files."
		},
		"treeMaker.search.ignoreFilePathPatternOnExport": {
			"type": "array",
			"default": [
				"**/build/**",
				"**/dist/**",
				"**/tmp/**",
				"**/vendor/**",
				"**/tree-maker/**"
			],
			"scope": "resource",
			"description": "The ignore file path pattern on export."
		},
		"treeMaker.search.shouldListOnlyFiles": {
			"type": "boolean",
			"default": false,
			"scope": "resource",
			"description": "Should list only files."
		},
		"treeMaker.search.maxSearchRecursionDepth": {
			"type": "number",
			"default": 3,
			"scope": "resource",
			"description": "The maximum search recursion depth."
		},
		"treeMaker.search.shouldListOnlyVisibleFiles": {
			"type": "boolean",
			"default": false,
			"scope": "resource",
			"description": "Should list only visible files."
		},
		"treeMaker.search.keepGitignorePreferences": {
			"type": "boolean",
			"default": true,
			"scope": "resource",
			"description": "Keep gitignore preferences."
		}
	}
}
